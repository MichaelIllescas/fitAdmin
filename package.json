{
  "name": "fitadmin",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:frontend": "npm --prefix frontend/fit-admin-frontend run build",
    "build": "npm run build:frontend && electron-builder"
  },
  "build": {
    "appId": "com.tuempresa.fitadmin",
    "productName": "FitAdmin",
    "asar": false,
    "files": [
      "main.js",
      "preload.js",
      "backend/**/*",
      "frontend/dist/**/*",
      "database.sqlite",
      "icono.ico"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "icono.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12"
  }
}
